<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <select class="btn btn-outline-danger" name="district" type="button" aria-label="Search Way">
            {{#each districts}}
            <option href="#">{{ this }}</option>
            {{/each}}
          </select>
          <select class="btn btn-outline-danger" name="type" type="button" aria-label="Search Way">
            <option href="#">餐廳、分類</option>
            <option href="#">評分</option>
          </select>
          <input type="text" name="keyword" class="form-control" placeholder="請輸入餐廳、分類或評分"
            aria-label="Restaurant Name or rating" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns row row-cols-3">
        {{#each restaurants}}
        <div>
          <div class=" card mb-2">
            <img class="card-img-top" src={{ this.image }} alt={{ this.name }}>
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>

              <span class="badge rounded-pill bg-danger font-weight-normal">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
          </div>

          <div class="d-flex justify-content-end  mb-3">
            <a href="/restaurants/{{this._id}}/edit"><button type="button"
                class="btn btn-outline-primary btn-sm m-1">Edit</button></a>
            <a href="/restaurants/{{this._id}}">
              <button type="button" class="btn btn-outline-primary btn-sm m-1">Detail</button>
            </a>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>