<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" method="GET">
        <div class="row">
          <div class="col-md-10 col-12 mx-auto">
            <h4 class="mb-2">尋找餐廳：</h4>
          </div>
        </div>
        <div class="row col-md-10 col-12 mx-auto">
          <div class="col-4" style="padding:0 12px 0 0px; ">
            <div class="input-group col-4"
              style="border:rgb(215, 215, 215) 2px solid; background-color:#fff; border-radius:18px;">
              <button class="btn btn-major form-control-text" type="submit" id="search-button"><i
                  class="fas fa-search"></i></button>
              <input type="text" style="border:none; border-radius:18px;" class="form-control" name="keyword"
                value="{{keyword}}" placeholder="請輸入關鍵字">
            </div>
          </div>
          <div class="col-4" style="padding:0 12px 0;">
            <select class="btn btn-outline-danger" name="type" aria-label="Search Way">
              <option>店名</option>
              <option>類別</option>
              <option>評分</option>
              <option>地區</option>
            </select>
          </div>
          <div class="col-4" style="padding:0 0 0 12px;">
            <select class="btn btn-outline-danger form-control" name="sort" onchange="submit()" aria-label="Sort Way">
              <option>排序方式</option>
              <option> A --> Z </option>
              <option> Z --> A </option>
              <option> 類別 </option>
              <option> 地區 </option>
            </select>
          </div>
        </div>
      </form>
    </div>
  </div>

  <!-- restaurant list -->
  <div class="row mt-5">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns row row-cols-3">
        {{#each restaurants}}
        <div>
          <div class=" card mb-2">
            <a href="/restaurants/{{this._id}}"><img class="card-img-top" src={{ this.image }} alt={{ this.name }}></a>
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>
              <span class="badge rounded-pill bg-danger font-weight-normal">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </div>
          <div class="d-flex justify-content-end  mb-3">
            <a href="/restaurants/{{this._id}}/edit"><button type="button"
                class="btn btn-outline-primary btn-sm m-1">編輯</button></a>
            <a href="/restaurants/{{this._id}}">
              <button type="button" class="btn btn-outline-primary btn-sm m-1">查看</button>
            </a>
            <form action="/restaurants/{{ this._id }}/delete" method="POST">
              <button type="button" class="btn btn-outline-danger btn-sm m-1" data-bs-toggle="modal"
                data-bs-target="#deleteModal{{this._id}}">刪除</button>

              <div class="modal fade" id="deleteModal{{this._id}}" tabindex="-1" aria-labelledby="deleteModal"
                aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="deleteModalLabel">注意！</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      確定刪除{{ this.name }}？
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">返回</button>
                      <button type="submit" class="btn btn-outline-danger">刪除</button>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  {{#unless restaurants.length}}
  <h6 style="text-align:center; display-block">查無結果</h6>
  {{/unless}}
</div>